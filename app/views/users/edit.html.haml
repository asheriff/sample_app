- @title = "#{@user.name} :: Edit"

.update_gravatar.gravatar
  %a{ :href=>"http://gravatar.com/emails", :target=>:_blank }
    = image_tag gravatar_url(@user), :alt=>"#{@user.name} Gravatar"
    %br
    Change

= form_for(@user) do |f|
  = render 'shared/errors', :obj=>f.object
  = render 'form', :f=>f
  .actions
    = f.submit( "Update" )
